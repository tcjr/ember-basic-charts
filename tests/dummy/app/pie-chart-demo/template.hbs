<div id="pie-chart-no-data">
  {{pie-chart}}
</div>

<hr/>
<h3>Single entry data</h3>
<pre>{{singleEntryJson}}</pre>

<div id="pie-chart-single-entry">
  {{pie-chart
    slices=singleEntry
  }}
</div>

<hr/>
<h3>Multi entry data</h3>
<pre>{{multiEntryJson}}</pre>

<div id="pie-chart-multi-entry">
  {{pie-chart
    slices=multiEntry
  }}
</div>

<div id="pie-chart-limited-entry">
  {{pie-chart
    slices=multiEntry
    slicesMax=4
  }}
</div>

<div id="pie-chart-alternate-pinfo">
  {{pie-chart
    slices=multiEntry
    pieInfoComponent='triple-x'
  }}
</div>
